generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//
// -------------------------------------------------------------
// AP2 Task Queue Table (needed for HX2 v2)
// -------------------------------------------------------------
//

model Ap2Task {
  id        String   @id @default(cuid())
  taskType  String
  payload   Json
  state     String   @default("queued") // queued | running | completed | failed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}